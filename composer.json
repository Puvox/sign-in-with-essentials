{
    "name": "puvox/sign-in-with-essentials",
    "description": "Adds a \"Sign in with\" Google/Apple/Microsoft functionality to your website. ( Use ` --no-dev --prefer-dist --ignore-platform-reqs`)",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Puvox Software",
            "email": "support@puvox.software"
        }
    ],
    "require": {
        "trunkstar/oauth2-microsoft": "^0.1.1",
        "patrickbussmann/oauth2-apple": "^0.3.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^10.0",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "replace": {
        "paragonie/random_compat": "*"
    }
}
